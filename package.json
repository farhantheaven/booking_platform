{
  "name": "highlevel-booking-platform",
  "version": "1.0.0",
  "description": "Recurring Meetings Booking Platform API",
  "main": "dist/server.js",
  "scripts": {
    "setup": "node setup.js",
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "load-test": "k6 run tests/load/load-test.js",
    "spike-test": "k6 run tests/load/spike-test.js",
    "db:create": "sequelize-cli db:create",
    "db:migrate": "sequelize-cli db:migrate",
    "db:migrate:undo": "sequelize-cli db:migrate:undo",
    "db:seed": "sequelize-cli db:seed:all",
    "db:seed:undo": "sequelize-cli db:seed:undo:all",
    "db:drop": "sequelize-cli db:drop",
    "db:reset": "npm run db:drop && npm run db:create && npm run db:migrate && npm run db:seed",
    "db:setup": "npm run db:create && npm run db:migrate && npm run db:seed",
    "debug": "node --inspect -r ts-node/register -r dotenv/config src/server.ts",
    "debug:test": "node --inspect-brk -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^7.1.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "rrule": "^2.7.2",
    "sequelize": "^6.35.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/pg": "^8.10.9",
    "@types/sequelize": "^4.28.20",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "sequelize-cli": "^6.6.2",
    "sequelize-typescript": "^2.1.6",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
